{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "globals": {
        "__firefox__": "readonly",
        "SECURITY_TOKEN": "readonly",
        "BLOCKING_ENABLED": "readonly",
        "TRACKER_DATA": "readonly",
        "IS_DEBUG": "readonly",
        "webkit": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "indent": ["error", 4]
    }
}
