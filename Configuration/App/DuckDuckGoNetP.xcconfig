#include "AppTargetsBase.xcconfig"
#include "../NetPIDs.xcconfig"
#include "../NetPOverrides.xcconfig"

BUNDLE_IDENTIFIER_PREFIX = com.duckduckgo.macos.browser.network-protection.system-extension

// Override AppTargetsBase.xcconfig until we resolve bundle IDs.
PRODUCT_BUNDLE_IDENTIFIER[sdk=*] = $(BUNDLE_IDENTIFIER_PREFIX)
PRODUCT_BUNDLE_IDENTIFIER[config=Debug][sdk=*] = $(BUNDLE_IDENTIFIER_PREFIX)
PRODUCT_BUNDLE_IDENTIFIER[config=CI][sdk=*] =
PRODUCT_BUNDLE_IDENTIFIER[config=Review][sdk=*] =

INFOPLIST_FILE = DuckDuckGo/Info.plist

// Just make sure to override anything set by the AppTargetBase.xcconfig
CODE_SIGN_STYLE = Manual
CODE_SIGN_STYLE[config=Debug][sdk=*] = Manual

// Left empty intentionally as we currently only support debug and release builds
CODE_SIGN_ENTITLEMENTS[config=Review][sdk=macosx*] =
CODE_SIGN_ENTITLEMENTS[config=CI][sdk=macosx*] =
CODE_SIGN_ENTITLEMENTS[config=Debug][sdk=macosx*] = DuckDuckGo/DuckDuckGo_NetP_Debug.entitlements
CODE_SIGN_ENTITLEMENTS[config=Release][sdk=macosx*] = DuckDuckGo/DuckDuckGo_NetP_Release.entitlements

CODE_SIGN_IDENTITY[sdk=macosx*] = Developer ID Application
CODE_SIGN_IDENTITY[config=Debug][sdk=macosx*] = Apple Development
CODE_SIGN_IDENTITY[config=CI][sdk=macosx*] =

PRODUCT_NAME_PREFIX = DuckDuckGo Network Protection

PROVISIONING_PROFILE_SPECIFIER[sdk=macosx*] =
PROVISIONING_PROFILE_SPECIFIER[config=Debug][sdk=macosx*] = macOS Network Protection (SysEx Development)
PROVISIONING_PROFILE_SPECIFIER[config=Release][sdk=macosx*] = Mac Browser NetP Developer ID (Distribution)

NETP_EXTRA_FLAGS = NETP NETP_SYSTEM_EXTENSION

// Override the icon with our custom one
ASSETCATALOG_COMPILER_APPICON_NAME = Icon - Network Protection
ASSETCATALOG_COMPILER_APPICON_NAME[config=Debug] = Icon - Network Protection
ASSETCATALOG_COMPILER_APPICON_NAME[config=CI] = Icon - Network Protection
ASSETCATALOG_COMPILER_APPICON_NAME[config=Review] = Icon - Network Protection

#include? "../../LocalOverrides.xcconfig"
